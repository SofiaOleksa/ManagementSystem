@model ServerApp.Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete booking";
}

<h1>Delete booking</h1>

<h3>Are you sure you want to delete this booking?</h3>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">@Model.ClientName</dd>

        <dt class="col-sm-2">Coach</dt>
        <dd class="col-sm-10">@Model.Coach?.Name</dd>

        <dt class="col-sm-2">Class</dt>
        <dd class="col-sm-10">@Model.Class?.Name</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
