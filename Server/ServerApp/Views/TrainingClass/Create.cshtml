@model ServerApp.Models.Classes

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create training class";
}

<h1>Create training class</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CoachId">Coach</label>
        <select asp-for="CoachId" asp-items="ViewBag.CoachId" class="form-control"></select>
        <span asp-validation-for="CoachId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TimeSlot">Time slot</label>
        <input asp-for="TimeSlot" class="form-control" type="datetime-local" />
        <span asp-validation-for="TimeSlot" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
