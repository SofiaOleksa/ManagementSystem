@model ServerApp.Models.TrainingClass

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete class";
}

<h1>Delete class</h1>

<h3>Are you sure you want to delete this class?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Coach</dt>
        <dd class="col-sm-10">@Model.Coach?.Name</dd>

        <dt class="col-sm-2">Time slot</dt>
        <dd class="col-sm-10">@Model.TimeSlot</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
