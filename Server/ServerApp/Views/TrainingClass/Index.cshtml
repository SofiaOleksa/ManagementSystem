@model IEnumerable<ServerApp.Models.TrainingClass>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Training classes";
}

<h1>Training classes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create new class</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Coach</th>
            <th>Time slot</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Coach?.Name</td>
                <td>@c.TimeSlot</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@c.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

