<Shell
    x:Class="ClientApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ClientApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ClientApp">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Classes"
        ContentTemplate="{DataTemplate views:ItemsPage}"
        Route="ItemsPage" />

    <ShellContent
        Title="Action"
        ContentTemplate="{DataTemplate views:ActionPage}"
        Route="ActionPage" />

</Shell>
